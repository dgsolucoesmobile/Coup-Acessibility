<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgrounLayout"
    android:orientation="vertical"
    tools:context="com.dgsm.accessibilitycoup.Activity.ReadCard"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btNome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_weight="2"
        android:autoSizeMinTextSize="50sp"
        android:autoSizeTextType="uniform"
        android:background="@color/colorBackgroundButton"
        android:padding="15dp"
        android:text="@string/nome"
        android:textColor="@color/colorTextButton"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btDescricao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDescricao"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="2"
        android:autoSizeMinTextSize="50sp"
        android:autoSizeTextType="uniform"
        android:background="@color/colorBackgroundButton"
        android:padding="15dp"
        android:textSize="50sp"
        android:text="@string/descricao"
        android:textColor="@color/colorTextButton"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btDetalhes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btNome" />

    <Button
        android:id="@+id/btDetalhes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="2"
        android:autoSizeMinTextSize="50sp"
        android:autoSizeTextType="uniform"
        android:background="@color/colorBackgroundButton"
        android:textSize="50sp"
        android:padding="15dp"
        android:text="@string/detalhes"
        android:textColor="@color/colorTextButton"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDescricao"
        tools:ignore="HardcodedText" />

</LinearLayout>
