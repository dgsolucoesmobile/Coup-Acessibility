<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgrounLayout"
    tools:context="com.dgsm.accessibilitycoup.Activity.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:paddingBottom="160dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/btNome"
            android:text="NOME"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorTextButton"
            android:background="@color/colorBackgroundButton"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/btDescricao"
            android:text="DESCRIÇÃO"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorTextButton"
            android:background="@color/colorBackgroundButton"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/btDetalhes"
            android:text="DETALHES"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorTextButton"
            android:background="@color/colorBackgroundButton"/>


    </LinearLayout>
</ScrollView>
