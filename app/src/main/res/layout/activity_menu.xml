<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgrounLayout"
    tools:context="com.well.whospy.Activity.MenuActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/btLerCarta"
        android:text="LER CARTA"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorTextButton"
        android:background="@color/colorBackgroundButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/btAtributos"
        android:text="ATRIBUTOS"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorTextButton"
        android:background="@color/colorBackgroundButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/btDicas"
        android:text="DICAS"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorTextButton"
        android:background="@color/colorBackgroundButton"/>

</LinearLayout>
