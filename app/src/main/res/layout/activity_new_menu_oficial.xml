<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgrounLayout"
    tools:context="com.dgsm.accessibilitycoup.Activity.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgrounLayout"
        android:orientation="vertical"
        android:paddingBottom="170dp"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin">

        <Button
            android:id="@+id/btJogar"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="40dp"
            android:background="@color/colorBackgroundButton"
            android:text="@string/jogar"
            android:textColor="@android:color/white"
            android:textSize="50dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btConfigurar"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorBackgroundButton"
            android:text="APAGAR DADOS"
            android:textColor="@android:color/white"
            android:textSize="50dp"
            android:textStyle="bold"/>
    </LinearLayout>

</ScrollView>
